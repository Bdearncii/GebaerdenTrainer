{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    },
    {
      "src": "server/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/server/(.*)",
      "dest": "server/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
}
